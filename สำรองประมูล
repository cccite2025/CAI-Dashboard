  Briefcase, Package, CheckCircle, Clock, MapPin, 
  Users, Plus, Trash2, Trophy, Coins, AlertCircle, ArrowDown, ArrowUp,
  BarChart3, PieChart as PieChartIcon, Layout, Save, Edit, ChevronDown, ChevronRight, Check, Search, Filter, Calendar as CalendarIcon, FileText, ChevronLeft, BellRing, AlertTriangle, PenTool
} from 'lucide-react';
