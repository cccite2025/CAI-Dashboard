const SegmentedProgress = ({ plan, actual, status, delayDays, projectStatus }) => {
  if (projectStatus === 'Cancelled') {
    return <span className="text-xs text-gray-400 font-medium bg-gray-100 px-2 py-1 rounded-full">‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å‡πÇ‡∏Ñ‡∏£‡∏á‡∏Å‡∏≤‡∏£</span>;
  }
  if (projectStatus === 'Hold') {
    return <span className="text-xs text-orange-500 font-medium bg-orange-100 px-2 py-1 rounded-full flex items-center gap-1 w-max mx-auto"><PauseCircle size={10}/> ‡∏ä‡∏∞‡∏•‡∏≠‡πÇ‡∏Ñ‡∏£‡∏á‡∏Å‡∏≤‡∏£</span>;
  }

  const totalBars = 20; 
  const activeBars = Math.round((actual / 100) * totalBars);
  const isDelayed = delayDays > 0 || status === 'Delay';
  const barColor = isDelayed ? 'bg-red-500' : 'bg-emerald-500';
  const textColor = isDelayed ? 'text-red-600' : 'text-emerald-600';

  return (
    <div className="w-[120px] flex flex-col gap-1">
      <div className="flex justify-between items-end mb-0.5">
        <span className={`text-sm font-bold ${textColor}`}>{actual}%</span>
        <span className="text-[9px] text-gray-400 font-mono">
           {delayDays > 0 ? (
             <span className="text-red-500 font-bold bg-red-50 px-1 rounded flex items-center gap-0.5">
               {status === 'Completed' ? <CheckCircle size={8}/> : <Clock size={8}/>}
               Late {delayDays}d
             </span>
           ) : (`Plan: ${plan}%`)}
        </span>
      </div>
      <div className="flex gap-[2px] h-3 items-end">
        {[...Array(totalBars)].map((_, index) => (
          <div key={index} className={`w-full rounded-[1px] transition-all duration-300 ${index < activeBars ? `${barColor} h-full` : 'bg-gray-100 h-full'}`}></div>
        ))}
      </div>
    </div>
  );
};

